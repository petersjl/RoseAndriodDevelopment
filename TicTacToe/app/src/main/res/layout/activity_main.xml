<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/button_table"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        >


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button00"
                style="@style/TTTButton"
                />
            <Button
                android:id="@+id/button01"
                style="@style/TTTButton"
                />
            <Button
                android:id="@+id/button02"
                style="@style/TTTButton"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button10"
                style="@style/TTTButton"
                />
            <Button
                android:id="@+id/button11"
                style="@style/TTTButton"
                />
            <Button
                android:id="@+id/button12"
                style="@style/TTTButton"
                />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button20"
                style="@style/TTTButton"
                />
            <Button
                android:id="@+id/button21"
                style="@style/TTTButton"
                />
            <Button
                android:id="@+id/button22"
                style="@style/TTTButton"
                />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/game_state_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/button_table"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        android:text="@string/new_game"
        android:textStyle="bold"
        android:layout_alignBaseline="@id/button_table"

        />

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:layout_alignRight="@id/button_table"
        android:layout_below="@id/button_table"

        />

</RelativeLayout>